{% extends 'base.html.twig' %}
{% block title %}Contact{% endblock %}
{% block body %}
    <div class="main">
        <section class="purple lighten-4">
            <div class="container">
                <div class="row">
                    <div class="col s12">
                        <p class="header light center">Contacter-nous si vous avez la moindre question, nous nous ferons un
                            plaisir de vous répondre dans les meilleurs délais.</p>
                    </div>
                </div>
            </div>
        </section>
        <div class="container">
            <div class="row">

            </div>
            <div class="row">
                <div class="col m8 s12">
                    {{ form_start(contactForm) }}
                    {{ form_widget(contactForm) }}
                    <input type="submit" value="Send"
                           class="btn"/>
                    {{ form_end(contactForm) }}

                </div>
                <div class="col m4 hide-on-small-and-down">
                    <img class="responsive-img" src="{{ asset('assets/img/templogo4.png') }}">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
