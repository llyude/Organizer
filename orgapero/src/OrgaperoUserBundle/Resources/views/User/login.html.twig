{% extends 'base.html.twig' %}
{% block title %} Login {% endblock %}
{% block body %}
    <div class="row">
        {% if error %}
            <div class="card-panel red lighten-2 center-align col l4 offset-l4 s10 offset-s1">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <div class="card col l4 offset-l4 s10 offset-s1">
            <div class="card-content">
                <div class="card-title">
                    Connection
                </div>
                <form action="{{ path('orgapero_user_login') }}" method="post">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required/>

                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password" required/>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <button class="btn" type="submit">login</button>
                </form>
            </div>
            <div class="card-action center">
                <a href="#">password lost ?</a>
                <a href="{{ path('orgapero_user_inscription') }}">Create an account</a>
            </div>
        </div>
    </div>
{% endblock %}
